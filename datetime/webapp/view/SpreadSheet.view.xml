<mvc:View controllerName="sap.mp.datetime.controller.SpreadSheet"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="_IDGenPage" >
        <Table id="_IDGenTable" items="{path: '/Employees'}">
            <headerToolbar>
                <OverflowToolbar id="_IDGenOverflowToolbar" >
                    <ToolbarSpacer id="_IDGenToolbarSpacer" />
                    <Button id="_IDGenButton1" icon="sap-icon://excel-attachment" press=".onExport"/>
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column id="_IDGenColumn1" hAlign="Begin">
                    <Title id="_IDGenTitle1"  
                               text="EmployeeID"/>
                </Column>
                <Column id="_IDGenColumn7"  hAlign="Begin">
                    <Title id="_IDGenTitle5"   
                               text="Name"/>
                </Column>
                <Column id="_IDGenColumn3" >
                    <Title id="_IDGenTitle3"   
                               text="Department"/>
                </Column>
                <Column id="_IDGenColumn4" >
                    <Title id="_IDGenTitle4"   
                               text="Country"/>
                </Column>
                <Column id="_IDGenColumn6" >
                    <Title id="_IDGenTitle6"   
                               text="JoiningDate"/>
                </Column>
                <Column id="_IDGenColumn8" >
                    <Title id="_IDGenTitle8"   
                               text="Salary"/>
                </Column>
            </columns>
            <items>
                <ColumnListItem id="_IDGenColumnListItem" >
                    <cells>
                        <ObjectIdentifier id="_IDGenText3" title="{EmployeeID}" />
                        <Text id="_IDGenText4" text="{Name}" />
                        <Text id="_IDGenText5" text="{Department}" />
                        <Text id="_IDGenText6" text="{Country}" />
                        <Text id="_IDGenText7" text="{path: 'JoiningDate', formatter: '.myFormatter.dateConverter'}" />
                        <Text id="_IDGenText8" text="{Salary}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Page>
</mvc:View>